/* Dynamically generated for each deployment and indicated the Connection / Relationship btw nodes */
{
  "$id": "https://example.com/topology-per-deployment.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Topology Per Deployment",
  "description": "Dynmaically generated Topology Per Deployment indicating relationship btw nodes",
  "required": [ "deploymentId" ],
  "type": "object",
  "properties": {
    "deploymentId": {
      "description": "ID of the deployment",
      "type": "integer"
    },
    "nodesUsed": {
      "description": "Nodes currently used in deployment",
      "type": "array",
      "nodes": {
        "description": "Node Details",
        "$ref": "https://example.com/topology-single-node.schema.json"
      }
    }
  }
}